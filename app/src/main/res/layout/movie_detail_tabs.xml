<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.design.widget.TabLayout
    android:id="@+id/detailTabLayout"
    style="@style/MovieDetailTabLayoutStyle"
    app:tabMode="fixed"
    app:tabGravity="fill">

    <android.support.design.widget.TabItem
        style="@style/MovieDetailTabItemStyle"
        android:text="@string/movie_trailer" />

    <android.support.design.widget.TabItem
        style="@style/MovieDetailTabItemStyle"
        android:text="@string/movie_review" />

</android.support.design.widget.TabLayout>

<android.support.v4.view.ViewPager
    android:id="@+id/detailViewPager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/detailTabLayout" />

</merge>
